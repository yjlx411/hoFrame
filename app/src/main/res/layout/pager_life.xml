<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">


        <TextView
            android:id="@+id/tv_temperature"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/text_8"
            android:textStyle="bold"
            android:text="30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_temperature_symbol"
            app:layout_constraintStart_toEndOf="@id/tv_temperature"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/tv_temperature"
            android:textColor="@color/text_8"
            android:textStyle="bold"
            android:text="℃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_label_oil"
            app:layout_constraintStart_toStartOf="@id/iv_select_92"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_temperature"
            android:textColor="@color/text_6"
            android:textStyle="bold"
            android:text="今日油价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_select_92"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_select_oil_price"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_92"
            app:layout_constraintEnd_toEndOf="@id/tv_label_92"
            app:layout_constraintStart_toStartOf="@id/tv_label_92"
            app:layout_constraintTop_toTopOf="@id/tv_label_92" />


        <ImageView
            android:id="@+id/iv_select_95"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_95"
            app:layout_constraintEnd_toEndOf="@id/tv_label_95"
            app:layout_constraintStart_toStartOf="@id/tv_label_95"
            app:layout_constraintTop_toTopOf="@id/tv_label_95" />


        <ImageView
            android:id="@+id/iv_select_98"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/tv_price_98"
            app:layout_constraintEnd_toEndOf="@id/tv_label_98"
            app:layout_constraintStart_toStartOf="@id/tv_label_98"
            app:layout_constraintTop_toTopOf="@id/tv_label_98" />

        <TextView
            android:id="@+id/tv_label_92"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="92号"
            android:textColor="@color/text_3"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tv_label_95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_label_oil" />


        <TextView
            android:id="@+id/tv_label_95"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="95号"
            android:textColor="@color/text_3"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tv_label_98"
            app:layout_constraintStart_toEndOf="@id/tv_label_92"
            app:layout_constraintTop_toTopOf="@id/tv_label_92" />


        <TextView
            android:id="@+id/tv_label_98"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:paddingTop="12dp"
            android:text="98号"
            android:textColor="@color/text_3"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_label_95"
            app:layout_constraintTop_toTopOf="@id/tv_label_92" />


        <TextView
            android:id="@+id/tv_price_92"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="0.00"
            android:textColor="@color/theme"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tv_label_92"
            app:layout_constraintStart_toStartOf="@id/tv_label_92"
            app:layout_constraintTop_toBottomOf="@id/tv_label_92" />

        <TextView
            android:id="@+id/tv_price_95"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="0.00"
            android:textColor="@color/theme"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tv_label_95"
            app:layout_constraintStart_toStartOf="@id/tv_label_95"
            app:layout_constraintTop_toBottomOf="@id/tv_label_95" />

        <TextView
            android:id="@+id/tv_price_98"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="0.00"
            android:textColor="@color/theme"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/tv_label_98"
            app:layout_constraintStart_toStartOf="@id/tv_label_98"
            app:layout_constraintTop_toBottomOf="@id/tv_label_98" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>